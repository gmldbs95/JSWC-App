<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>New Customer</title>
  <!-- Tell the browser to be responsive to screen width -->
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
  <!-- Ionicons -->
  <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/css/bootstrap-select.min.css">

  <!-- fullCalendar -->
  <link rel="stylesheet" href="~/plugins/fullcalendar/main.min.css">
  <link rel="stylesheet" href="~/plugins/fullcalendar-daygrid/main.min.css">
  <link rel="stylesheet" href="~/plugins/fullcalendar-timegrid/main.min.css">
  <link rel="stylesheet" href="~/plugins/fullcalendar-bootstrap/main.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
  <!-- Google Font: Source Sans Pro -->
  <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
@model Customer
<body class="hold-transition sidebar-mini">
<aside class="wrapper">
  <!-- Navbar -->
  <partial name="_NavPartial">
  <!-- Navbar -->

  <!-- Main Sidebar Container -->
  <partial name="_SidebarPartial">
  <!-- Main Sidebar Container -->

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Add new customer</h1>
          </div>
        </div>
      </div>
    </section>

    <!-- Main content -->
    <section class="content">
            <div class="card card-info">
              <div class="card-header">
                <h3 class="card-title">Fill in details of the customer</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form class="form" asp-action="NewReservationSubmit" asp-controller="Home" method="post">
                <div class="card-body">
           
                  <div class="form-row mb-2">
                    <div class="col-sm-4">
                      <label asp-for="@Model.FirstName">First Name</label>
                      <input type="text" asp-for="@Model.FirstName" class="form-control" placeholder="First Name">
                      <div class="text-danger small" style="height: 5px;"><span asp-validation-for="@Model.FirstName"></span></div>
                    </div>
                    <div class="col-sm-4">
                      <label asp-for="@Model.LastName">Last Name</label>
                      <input type="text" asp-for="@Model.LastName" class="form-control" placeholder="Last Name">
                      <div class="text-danger small" style="height: 5px;"><span asp-validation-for="@Model.LastName"></span></div>
                    </div>
                  </div>
                  
                  <div class="col-sm-8">
                    <label asp-for="@Model.Email">Email</label>
                    <input type="email" asp-for="@Model.Email" class="form-control" placeholder="Email">
                    <div class="text-danger small" style="height: 5px;"><span asp-validation-for="@Model.Email"></span></div>
                  </div>

                  <div class="col-sm-8">
                    <label asp-for="@Model.Phone">Phone</label>
                    <input type="text" asp-for="@Model.Phone" class="form-control" placeholder="Phone">
                    <div class="text-danger small" style="height: 5px;"><span asp-validation-for="@Model.Phone"></span></div>
                  </div>

                  <div class="col-sm-8">
                    <label asp-for="@Model.Address1">Address1</label>
                    <input type="text" asp-for="@Model.Address1" class="form-control" placeholder="Address1">
                    <div class="text-danger small" style="height: 5px;"><span asp-validation-for="@Model.Address1"></span></div>
                  </div>

                  <div class="col-sm-8">
                    <label asp-for="@Model.Address2">Address2</label>
                    <input type="text" asp-for="@Model.Address2" class="form-control" placeholder="eg. Unit Number, Apt Number">
                  </div>


                  <div class="col-sm-8">
                    <div class="form-row mb-2">
                      <input type="hidden" name="country" id="countryId" value="US"/>
                      <div class="col-sm-4">
                        <label for="stateId">State</label>
                        <select asp-for="@Model.State" class="states form-control mb-2" id="stateId">
                          <option value="">Select State</option>
                          @* <option selected value="Washington" stateid="WA" >Washington</option> *@
                        </select>
                      </div>
                      <div class="col-sm-4">
                        <label for="cityId">City</label>
                        <select asp-for="@Model.City" class="cities form-control mb-2" id="cityId">
                          <option value="">Select City</option>
                        </select>
                      </div>

                      <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
                      <script src="//geodata.solutions/includes/statecity.js"></script>
                    </div>
                  </div>


                  <div class="col-sm-8">
                    <div class="form-row mb-2">
                      <div class="col-sm-4">
                        <div class="row p-2"><label asp-for="@Model.Zip">Zipcode</label></div>
                        <input asp-for="@Model.Zip" type="text" placeholder="5-digit zip code" pattern="[\d{5}$]{5}" title="Must be 5 digit zipcode">
                      </div>
                    </div>
                  </div>

                  <div class="col">
                    <div class="form-row mb-2">
                        <label asp-for="@Model.Notes">Notes</label>
                        <textarea class="form-control rounded-0" asp-for="@Model.Notes" rows="3" placeholder="Enter customer notes"></textarea>
                      </div>
                  </div>
              </div>
        
                <div class="card-footer">
                  <button type="submit" class="btn btn-info">Submit</button>
                  <button type="submit" class="btn btn-danger float-right">Cancel</button>
                </div>
              </form>
            </div>
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <footer class="main-footer">
    <div class="float-right d-none d-sm-block">
    </div>
    <strong>Copyright &copy; 2020 <a href="h">massage.com</a>.</strong> All rights reserved.
  </footer>

  <!-- Control Sidebar -->
  <aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
  </aside>
  <!-- /.control-sidebar -->
</aside>
<!-- ./wrapper -->

<script src="~/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap -->
<script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/js/bootstrap-select.min.js"></script>

<!-- jQuery UI -->
<script src="~/plugins/jquery-ui/jquery-ui.min.js"></script>
<!-- AdminLTE App -->
