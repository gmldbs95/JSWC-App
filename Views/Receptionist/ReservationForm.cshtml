<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>New Reservation</title>
  <!-- Tell the browser to be responsive to screen width -->
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
  <!-- Ionicons -->
  <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/css/bootstrap-select.min.css">

  <!-- fullCalendar -->
  <link rel="stylesheet" href="~/plugins/fullcalendar/main.min.css">
  <link rel="stylesheet" href="~/plugins/fullcalendar-daygrid/main.min.css">
  <link rel="stylesheet" href="~/plugins/fullcalendar-timegrid/main.min.css">
  <link rel="stylesheet" href="~/plugins/fullcalendar-bootstrap/main.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
  <!-- Google Font: Source Sans Pro -->
  <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
@model ViewModel
<body class="hold-transition sidebar-mini">
<aside class="wrapper">
  <!-- Navbar -->
  <partial name="_NavPartial">

  @{
    ViewModel vm = Model;
  }
  <partial name="_RSidebarPartial" model="vm"/>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">

    <!-- Main content -->
    <section class="content">
        <div class="card card-info">
          <div class="card-header">
            <h3 class="card-title">Confirm appointment</h3>
          </div>
       <div class="container-fluid">
        <div class="row mb-2">
          <form class="form" asp-action="SubmitReservation" asp-controller="Receptionist" method="post">
            <input type="hidden" value="@Model.OneReservation.TimeslotId" asp-for="@Model.OneReservation.TimeslotId" id="tsid">
            <input type="hidden" value="@Model.OneReservation.ServiceId" asp-for="@Model.OneReservation.ServiceId">
            <input type="hidden" value="@Model.OneReservation.PractitionerId" asp-for="@Model.OneReservation.PractitionerId">
            <input type="hidden" value="@Model.OneReservation.CustomerId" asp-for="@Model.OneReservation.CustomerId">
            <div class="card-body">
              <div class="row">
                <div class="col">
                  <label for="service">Customer Name: @Model.OneCustomer.FirstName @Model.OneCustomer.LastName</label>
                </div>
                <div class="col">
                  <label for="service">Selected Service: @Model.OneService.Name</label>
                </div>
                <div class="col">
                  <label for="service">Selected Practiontioner: @Model.OneReservation.Practitioner.FirstName @Model.OneReservation.Practitioner.LastName</label>
                </div>
              </div>
              <textarea asp-for="@Model.OneReservation.Notes"></textarea>
            </div>
              <div class="form-row mb-2">
              <div id="calendar"></div>
          </div>
            <div class="card-footer">
              <button type="submit" class="btn btn-info float-right">Submit</button>
            </div>
          </form>

        </div>
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <footer class="main-footer">
    <div class="float-right d-none d-sm-block">
    </div>
    <strong>Copyright &copy; 2020 <a href="h">massage.com</a>.</strong> All rights reserved.
  </footer>
</aside>
<!-- ./wrapper -->

<script src="~/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap -->
<script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/js/bootstrap-select.min.js"></script>

<!-- jQuery UI -->
<script src="~/plugins/jquery-ui/jquery-ui.min.js"></script>
<!-- AdminLTE App -->
<script src="~/dist/js/adminlte.min.js"></script>
<!-- fullCalendar 2.2.5 -->
<script src="~/plugins/moment/moment.min.js"></script>
<script src="~/plugins/fullcalendar/main.min.js"></script>
<script src="~/plugins/fullcalendar-daygrid/main.min.js"></script>
<script src="~/plugins/fullcalendar-timegrid/main.min.js"></script>
<script src="~/plugins/fullcalendar-interaction/main.min.js"></script>
<script src="~/plugins/fullcalendar-bootstrap/main.min.js"></script>

<!--Practiontioner Scheduler -->
<script src="~/js/timeslotCalendar.js"></script>

</body>
</html>
